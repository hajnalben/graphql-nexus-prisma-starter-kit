type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  email: String! @unique
  name: String!
  password: String

  posts: [Post!] @relation(onDelete: CASCADE)
}

type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  title: String!
  content: String!

  author: User!
}